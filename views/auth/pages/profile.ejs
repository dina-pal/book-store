<h2>My Profile</h2>
<div class="row">
    <div class="col-md-3">
        <img class="rounded-circle rounded" style="width: 120px; border: 3px solid;"
            src="http://127.0.0.1:8000/assets/img/profile.jpg" alt="">
    </div>
    <div class="col-md-9">
        <h3>
            <%= user.name %>
        </h3>
        <div class="pro_info pr-2">
            <form class="user">
                <div class="form-group row">
                    <div class="col-md-6">
                        <input type="name" class="form-control form-control-user" value="<%= user.name  %> ">
                    </div>
                    <div class="col-md-6">
                        <input type="email" class="form-control form-control-user" value="<%= user.email  %> ">
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>